# Midnight Magnolia Environment Variables
# Copy this file to .env and fill in your actual credentials

# ==============================================
# SHOPIFY INTEGRATION
# ==============================================
# Your Shopify store domain (e.g., midnight-magnolia.myshopify.com)
VITE_SHOPIFY_DOMAIN=your-store.myshopify.com

# Shopify Storefront Access Token (for product fetching)
VITE_SHOPIFY_STOREFRONT_ACCESS_TOKEN=your_storefront_access_token

# Shopify Admin API Access Token (for order management)
SHOPIFY_ADMIN_ACCESS_TOKEN=your_admin_access_token

# Shopify Webhook Secret (for order notifications)
SHOPIFY_WEBHOOK_SECRET=your_webhook_secret

# ==============================================
# PATREON INTEGRATION
# ==============================================
# Patreon Creator Access Token
PATREON_ACCESS_TOKEN=your_patreon_access_token

# Patreon Client ID
PATREON_CLIENT_ID=your_patreon_client_id

# Patreon Client Secret
PATREON_CLIENT_SECRET=your_patreon_client_secret

# Patreon Campaign ID (your specific campaign)
PATREON_CAMPAIGN_ID=your_campaign_id

# Patreon Webhook Secret
PATREON_WEBHOOK_SECRET=your_patreon_webhook_secret

# ==============================================
# PAYMENT PROCESSING
# ==============================================
# Stripe Public Key (for payment processing)
VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key

# Stripe Secret Key (server-side only)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# ==============================================
# EMAIL & NOTIFICATIONS
# ==============================================
# Mailchimp API Key (for newsletter)
MAILCHIMP_API_KEY=your_mailchimp_api_key

# Mailchimp List ID
MAILCHIMP_LIST_ID=your_mailchimp_list_id

# SendGrid API Key (for transactional emails)
SENDGRID_API_KEY=your_sendgrid_api_key

# ==============================================
# ANALYTICS & TRACKING
# ==============================================
# Google Analytics Measurement ID
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Facebook Pixel ID
VITE_FACEBOOK_PIXEL_ID=your_facebook_pixel_id

# ==============================================
# AUTOMATION & WEBHOOKS
# ==============================================
# Make.com Webhook URLs
MAKE_ORDER_WEBHOOK_URL=https://hook.make.com/your_order_webhook
MAKE_SUBSCRIBER_WEBHOOK_URL=https://hook.make.com/your_subscriber_webhook
MAKE_CONTACT_WEBHOOK_URL=https://hook.make.com/your_contact_webhook

# ==============================================
# DEPLOYMENT & HOSTING
# ==============================================
# Railway Production URL
RAILWAY_STATIC_URL=https://your-app.railway.app

# Custom Domain
VITE_SITE_URL=https://midnightmagnolia.com

# ==============================================
# AI & CONTENT GENERATION
# ==============================================
# OpenAI API Key (for content generation)
OPENAI_API_KEY=sk-your_openai_api_key

# Claude API Key (if using Anthropic directly)
CLAUDE_API_KEY=your_claude_api_key

# ==============================================
# SECURITY & AUTHENTICATION
# ==============================================
# JWT Secret for session management
JWT_SECRET=your_super_secure_jwt_secret

# Session Secret
SESSION_SECRET=your_session_secret

# ==============================================
# DEVELOPMENT SETTINGS
# ==============================================
# Environment (development, staging, production)
NODE_ENV=development

# Debug Mode
DEBUG=true

# Port for local development
PORT=5173